---

interface Props {
  project: any // 临时使用any类型避免类型错误
}

const { project } = Astro.props
const { title, description, image, url, github, tags, status, featured } = project.data

// 状态颜色映射
const statusColors: Record<string, string> = {
  进行中: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
  已完成: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  暂停: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
  计划中: 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200',
}
---

<div class="project-card group">
  <!-- 项目图片 -->
  <div class="project-image">
    {image
? (
      <img
        src={image}
        alt={title}
        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    )
: (
      <div class="h-48 w-full flex items-center justify-center from-gray-200 to-gray-300 bg-gradient-to-br dark:from-gray-700 dark:to-gray-800">
        <svg class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
    )}

    <!-- Featured 标识 -->
    {featured && (
      <div class="absolute left-3 top-3">
        <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-1 text-xs text-yellow-800 font-medium dark:bg-yellow-900 dark:text-yellow-200">
          <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          精选
        </span>
      </div>
    )}

    <!-- 状态标识 -->
    <div class="absolute right-3 top-3">
      <span class={`inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ${statusColors[status] || statusColors['进行中']}`}>
        {status}
      </span>
    </div>
  </div>

  <!-- 项目内容 -->
  <div class="project-content">
    <div class="flex-1">
      <h3 class="project-title">{title}</h3>
      <p class="project-description">{description}</p>

      <!-- 标签 -->
      {tags && tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-2">
          {tags.map((tag: string) => (
            <span class="inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs text-gray-700 font-medium dark:bg-gray-800 dark:text-gray-300">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>

    <!-- 链接按钮 -->
    <div class="mt-4 flex gap-2">
      {url && (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
        >
          <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          访问
        </a>
      )}

      {github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
        >
          <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
          </svg>
          GitHub
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .project-card {
    @apply bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700;
  }

  .project-image {
    @apply relative overflow-hidden;
  }

  .project-content {
    @apply p-6 flex flex-col h-full;
  }

  .project-title {
    @apply text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200;
  }

  .project-description {
    @apply text-gray-600 dark:text-gray-300 text-sm leading-relaxed;
  }

  .project-link {
    @apply inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-md hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors duration-200;
  }
</style>
